<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".customer.VehicleFragment">

    <Button
        android:id="@+id/cusViewVehicleListBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="325dp"
        android:text="@string/cusViewVehListBtn"
        app:layout_constraintBottom_toTopOf="@+id/cusVehRateBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/cusVehRateBar"
        android:layout_width="243dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/custVehRateSum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cusViewVehicleListBtn" />

    <TextView
        android:id="@+id/custVehRateSum"
        android:layout_width="70dp"
        android:layout_height="34dp"
        android:layout_marginBottom="220dp"
        android:text="@string/ratingReciver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cusVehRateBar" />


</androidx.constraintlayout.widget.ConstraintLayout>