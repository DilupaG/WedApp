<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/etDecoPrice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tvVehicle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50dp"
        tools:context=".CarFragment">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDecCount">

            <EditText
                android:id="@+id/etDecoFname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="@string/hint_Fname"
                android:inputType="textPersonName"
                android:textAlignment="viewStart"
                android:textColorHint="#80B9B2"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etDecoLname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/hint_Lname"
                android:inputType="textPersonName"
                android:textColorHint="#80B9B2"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etDecoEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/hint_Email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/tea_green_our"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etDecoMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/hint_Phone"
                android:inputType="phone"
                android:textColorHint="@color/tea_green_our"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etDecoCname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/hint_companyName"
                android:inputType="textPersonName"
                android:textColorHint="@color/tea_green_our"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etDecoAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/hint_Address"
                android:inputType="textPostalAddress"
                android:textColorHint="@color/tea_green_our"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etDecoPRice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="@string/hint_price"
                android:inputType="number"
                android:textColorHint="#80B9B2"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etDecoDes"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="@string/vhDis"
                android:inputType="textMultiLine"
                android:textColorHint="#80B9B2"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/DecoImageUp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/btnDecoSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_submit"
                android:textSize="12sp" />

            <Button
                android:id="@+id/DecoEmail"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="@string/DecoSendEmail" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvDecCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_decorator"
            android:textColor="#80B9B2"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>